<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/MapAsBackground</item>
        <item name="actionBarStyle">@style/MapAsBackground</item>
    </style>

    <!-- MapAsBackground definition -->
    <style name="MapAsBackground" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@drawable/m9</item>
        <item name="background">@drawable/m9</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
    </style>
    
    <!-- MyActionBarTitleText definition -->
    <style name="MyActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/someColor</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>
